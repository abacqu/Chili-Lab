<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" type="text/css">
    <title>Recipe List</title>
</head>
<div class="mainimage">
    <nav class="indexnav">
        <a href="/recipes/new">Add a New Recipe</a>
    </nav>

    <body>
        <h1 class="Indexh1">Welcome to Chili Lab</h1>
        
            <ul>
                <% recipes.forEach(recipe=> { %>
                    <li>
                        <div class="indexcontainer">
                            <a href="/recipes/<%=recipe._id; %>">
                                <%=recipe.title; %>
                            </a>
                                <%if(recipe.img != null) { %>
                                    <img src= "<%=recipe.img; %>" width="150" height="200">  
                               <% } %>
                                    
                                    <div class="indexbutton">
                                    <form action="/recipes/<%=recipe.id %>?_method=DELETE" method="POST">
                                        <input class="indexinput" type="submit" value="DELETE" />
                                    </form>
                                    <form action="/recipes/<%=recipe._id %>/edit">
                                        <input class="indexinput" type="submit" value="EDIT">
                                    </form>
                                    </div>
                        </div>
                    </li>
                    <% }) %>
            </ul>
    </body>
</div>

</html>